{
  "baseUrlMWS": "https://www.nsandi.com",
  "baseUrlIFA": "https://www.nsandi-adviser.com",
  "cucumberDefaultTimeoutMs": 10000,

  "browser": {
    "name": "firefox",
    "headless": false,
    "viewport": {
      "width": 1920,
      "height": 1080
    },
    "slowMo": 500
  },

  "screenshot": {
    "pngComparisonThreshold": 0.001,
    "takeScreenshotsOnFailure": true,
    "fullPage": true
  },

  "paths": {
    "baselineDir": "test-artifacts/baseline",
    "screenshotsDir": "test-artifacts/screenshots",
    "reportsDir": "test-artifacts/reports",
    "diffDir": "test-artifacts/diff"
  }
}
